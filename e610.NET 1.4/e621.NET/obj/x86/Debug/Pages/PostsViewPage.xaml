<Page x:ConnectionId='1'
    x:Class="e610.NET.PostsViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:e610.NET"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:control="using:Microsoft.UI.Xaml.Controls"
    xmlns:uwpcontrols="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                       >
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="SideBar"
                          Color="#001439"/>
                    <SolidColorBrush x:Key="MainBackground"
                          Color="#000F2D"/>
                    <SolidColorBrush x:Key="TextBackgound" Color="#FF464646"/>
                    <AcrylicBrush x:Key="DialogBackground"
                          BackgroundSource="Backdrop"
                          TintColor="Black"
                          TintOpacity="0.01" 
                          FallbackColor="Black"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="180"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>

        


        <!--Sidebar StackPanel-->
        <ScrollViewer Margin="0,0,0,53" Canvas.ZIndex="10">
            <StackPanel Grid.Column="0" Orientation="Vertical" Background="{ThemeResource SideBar}" Translation="0,0,52">
                <StackPanel.Shadow>
                    <ThemeShadow x:ConnectionId='41' x:Name="SidePanelShadow"/>
                </StackPanel.Shadow>
                <!--Search Title, Box, and Button-->
                <TextBlock Text="Search" FontSize="18" Margin="10,10,10,0" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Vertical" Margin="10,10,10,10">
                    <TextBox x:ConnectionId='63' Width="auto" Height="Auto" x:Name="SearchBox"
                     VerticalAlignment="Top" HorizontalAlignment="Stretch"
                     TextWrapping="Wrap"                                                                />
                    <ListView x:ConnectionId='64' x:Name="SearchTagAutoComplete" Visibility="Visible" IsItemClickEnabled="True"                                            />
                    <Button x:ConnectionId='65' x:Name="SearchButton"                              HorizontalAlignment="Stretch" Margin="0,5,0,0">
                        <SymbolIcon Symbol="Accept"/>
                    </Button>
                </StackPanel>

                <!--Progressbar, Hidden under Search Button-->
                <control:ProgressBar x:ConnectionId='42' x:Name="LoadingBar" IsIndeterminate="True" Visibility="Collapsed"  Margin="0,0,0,0"
                         Height="3" Foreground="White" Width="150"
                         ShowPaused="False" ShowError="False"/>

                <!--Page controls and number-->
                <TextBlock x:ConnectionId='43' x:Name="PageText" Text="Page" FontSize="18" Margin="10,0,10,5" HorizontalAlignment="Center"/>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button x:ConnectionId='60' x:Name="BackPage" Margin="0,0,5,0"                         >
                        <SymbolIcon Symbol="Back"/>
                    </Button>
                    <TextBlock x:ConnectionId='61' x:Name="PageNumberText"                           FontSize="20" Margin="0,0,0,0"/>
                    <Button x:ConnectionId='62' x:Name="ForwardPage"                             Margin="5,0,0,0">
                        <SymbolIcon Symbol="Forward"/>
                    </Button>
                </StackPanel>
                <StackPanel Orientation="Vertical">
                    <HyperlinkButton x:ConnectionId='44' x:Name="ArtistsTitle" Foreground="White" Content="Artists:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='45' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="ArtistsTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='46' x:Name="CopyrightsTitle" Foreground="White" Content="Copyrights:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='47' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="CopyrightsTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='48' x:Name="CharactersTitle" Foreground="White" Content="Characters:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='49' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="CharactersTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='50' x:Name="SpeciesTitle" Foreground="White" Content="Species:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='51' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="SpeciesTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='52' x:Name="GeneralTitle" Foreground="White" Content="General:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='53' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="GeneralTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='54' x:Name="MetaTitle" Foreground="White" Content="Meta:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='55' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="MetaTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='56' x:Name="LoreTitle" Foreground="White" Content="Lore:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='57' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="LoreTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='58' x:Name="InvalidTitle" Foreground="White" Content="Invalid:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='59' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="InvalidTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Grid Background="{ThemeResource SideBar}"
            Grid.Column="0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
                <Button x:ConnectionId='39' Margin="0,0,10,0" x:Name="Account"                      >
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Account"/>
                    </StackPanel>
                </Button>
                <Button x:ConnectionId='40' x:Name="Settings"                       >
                    <StackPanel Orientation="Horizontal">
                        <SymbolIcon Symbol="Setting"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <!--Posts View-->
        <Grid x:ConnectionId='2' Background="{ThemeResource MainBackground}" Grid.Column="1" VerticalAlignment="Stretch" x:Name="MainPanel"                       >
            <Grid.Resources>
                <SwipeItems x:Key="left" Mode="Execute">
                    <SwipeItem x:ConnectionId='10' BehaviorOnInvoked="Close"                                
                                            Background="#000F2D"/>
                </SwipeItems>
                <SwipeItems x:Key="right" Mode="Execute">
                    <SwipeItem x:ConnectionId='9' BehaviorOnInvoked="Close"                                 
                                           Background="#000F2D"/>
                </SwipeItems>
            </Grid.Resources>
            <Button x:ConnectionId='11' Canvas.ZIndex="15" x:Name="CloseButton"                           Visibility="Collapsed"
                    VerticalAlignment="Top" Margin="10,65,10,10" Background="Black">
                <SymbolIcon Symbol="Cancel"/>
            </Button>
            <StackPanel x:ConnectionId='12' Background="{ThemeResource SideBar}" x:Name="TopBar" Visibility="Collapsed"
                        Margin="0,0,0,10" Grid.Column="1" Canvas.ZIndex="10" Height="55" VerticalAlignment="Top">
                <StackPanel x:ConnectionId='23' Orientation="Horizontal" HorizontalAlignment="Center" x:Name="CommandBar">
                    <Button x:ConnectionId='24' x:Name="PoolButton" Margin="10,10,5,10" Visibility="Visible" HorizontalAlignment="Center" Background="Black"
                                                              >
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout x:ConnectionId='38' x:Name="PoolsMenu" Placement="Bottom" ShowMode="TransientWithDismissOnPointerMoveAway" />
                        </FlyoutBase.AttachedFlyout>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Library" Margin="0,0,5,0"/>
                            <TextBlock Text="Pools"/>
                        </StackPanel>
                    </Button>
                    <Button x:ConnectionId='25' x:Name="ImageSize" Margin="0,0,5,0"                           Background="Black">
                        <SymbolIcon Symbol="Pictures"/>
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout x:ConnectionId='34' x:Name="ImageSizeMenu" Placement="Bottom" ShowMode="TransientWithDismissOnPointerMoveAway">
                                <MenuFlyoutItem x:ConnectionId='35' Text="Page Height"                            />
                                <MenuFlyoutItem x:ConnectionId='36' Text="Sample Height"                            />
                                <MenuFlyoutItem x:ConnectionId='37' Text="Full Height"                            />
                            </MenuFlyout>
                        </FlyoutBase.AttachedFlyout>
                    </Button>
                    <Button x:ConnectionId='26' x:Name="BackPost" Margin="0,0,5,0"                          Background="Black">
                        <SymbolIcon Symbol="Back"/>
                    </Button>
                    <ComboBox x:ConnectionId='27' x:Name="MovementSelection"                                       
                                      Width="250" VerticalAlignment="Center" DisplayMemberPath="name">
                    </ComboBox>
                    <Button x:ConnectionId='28' x:Name="ForwardPost"                             Margin="5,0,5,0" Background="Black">
                        <SymbolIcon Symbol="Forward"/>
                    </Button>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='29' Background="Black" Canvas.ZIndex="20" Margin="0,10,5,10" x:Name="VoteUpButton"                             >
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Like"/>
                                <TextBlock x:ConnectionId='33' x:Name="VoteUpCount"/>
                            </StackPanel>
                        </Button>
                        <Button x:ConnectionId='30' Background="Black" Canvas.ZIndex="20" Margin="0,10,5,10" x:Name="VoteDownButton"                               >
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Dislike"/>
                                <TextBlock x:ConnectionId='32' x:Name="VoteDownCount"/>
                            </StackPanel>
                        </Button>
                        <Button x:ConnectionId='31' Background="Black" Canvas.ZIndex="20" Margin="0,10,0,10" x:Name="FavoiteButton"                              >
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Add" Margin="0,0,10,0"/>
                                <TextBlock Text="Favorite"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <SwipeControl RightItems="{StaticResource right}" LeftItems="{StaticResource left}" Background="Transparent" Margin="0,55,0,0">
                <Grid>
                    <control:ProgressRing x:ConnectionId='14' x:Name="ImageLoadProgress" Width="80" Height="80" IsActive="True" IsIndeterminate="True"
                                          Foreground="White" Visibility="Collapsed" Canvas.ZIndex="20"/>
                    <uwpcontrols:ImageEx x:ConnectionId='15' x:Name="bigpicture" Source=""   
                                              Canvas.ZIndex="1" Visibility="Collapsed"
                                                                                                                           />
                    <uwpcontrols:ImageEx x:ConnectionId='16' x:Name="smallpicture"                                                                                                                                
                   Canvas.ZIndex="1" Visibility="Collapsed"
                                                       />
                    <MediaElement x:ConnectionId='17' Visibility="Collapsed" Canvas.ZIndex="40"
                    AutoPlay="False" x:Name="bigvideo"                                               
                    AreTransportControlsEnabled="True"                                      IsLooping="True"/>
                    <GridView x:ConnectionId='18' x:Name="ImageGrid"                                        
                  HorizontalAlignment="Stretch"                       
                                                  IsItemClickEnabled="True">
                        <GridView.ItemTemplate>
                            <DataTemplate                        >
                                <Grid x:ConnectionId='20' Margin="10,0,0,10" Width="150" Height="150">
                                    <uwpcontrols:ImageEx x:ConnectionId='21' Source="{Binding preview.url}"                                                                            />
                                    <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="{ThemeResource TextBackgound}">
                                        <TextBlock x:ConnectionId='22'                          Margin="0,-4,0,0"            />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </Grid>
            </SwipeControl>
            <Grid x:ConnectionId='13' x:Name="ImageShadowHost"/>
        </Grid>

        <ContentDialog x:ConnectionId='3' Grid.ColumnSpan="2" Visibility="Visible" Grid.Column="0"
            x:Name="SettingsDialog"
            Title="Settings"
            PrimaryButtonText="Save"
                                                                  
            CloseButtonText="Cancel"
            DefaultButton="Primary"
            Background="{ThemeResource DialogBackground}"
            BorderThickness="0">
            <StackPanel VerticalAlignment="Stretch" HorizontalAlignment="Stretch" >
                <ComboBox x:ConnectionId='5' x:Name="RatingSelection" Width="200" VerticalAlignment="Top" 
                          HorizontalAlignment="Left" Header="Highest Rating allowed" Margin="10,10,0,0" >
                    <x:String>rating:safe</x:String>
                    <x:String>rating:questionable</x:String>
                    <x:String>rating:explicit</x:String>
                </ComboBox>
                <TextBlock Text="Post Count" Margin="10,0,10,0"/>
                <Slider x:ConnectionId='6' x:Name="PostCountSlider" Margin="10,0,10,0" Maximum="300" Minimum="25" StepFrequency="5"/>
                <ToggleSwitch x:ConnectionId='7' x:Name="CommentSwitch" Header="Show Comments" Margin="10,10,0,0"/>
                <ToggleSwitch x:ConnectionId='8' x:Name="VolumeSwitch" Header="Mute Videos By Default" Margin="10,10,0,0"/>
            </StackPanel>
        </ContentDialog>

        <control:InfoBar x:ConnectionId='4' IsOpen="false" Grid.Column="1" HorizontalAlignment="Center"
                      Severity="Informational" VerticalAlignment="Bottom"
                      Title="" x:Name="InfoPopup"
                      Message="" Margin="10"/>
    </Grid>
</Page>

