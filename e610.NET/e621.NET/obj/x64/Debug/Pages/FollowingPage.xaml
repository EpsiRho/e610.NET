<Page x:ConnectionId='1' x:Name="FollowsPage"
    x:Class="e610.NET.Pages.FollowingPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:e610.NET.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:control="using:Microsoft.UI.Xaml.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:uwpcontrols="using:Microsoft.Toolkit.Uwp.UI.Controls" xmlns:local1="using:e610.NET"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="SideBar"
                          Color="#001439"/>
                    <SolidColorBrush x:Key="MainBackground"
                          Color="#000F2D"/>
                    <SolidColorBrush x:Key="TextBackgound" Color="#FF464646"/>
                    <AcrylicBrush x:Key="DialogBackground"
                          BackgroundSource="Backdrop"
                          TintColor="Black"
                          TintOpacity="0.01" 
                          FallbackColor="Black"/>
                    <SolidColorBrush x:Key="DescBackground"
                          Color="#0B2C5F"/>
                    <SolidColorBrush x:Key="CommentBackground"
                          Color="#052049"/>
                    <SolidColorBrush x:Key="SideLine"
                                     Color="#009CB4"/>
                    <AcrylicBrush x:Key="ImageBackground"
                          BackgroundSource="Backdrop"
                          TintColor="Black"
                          TintOpacity="0.3" 
                          FallbackColor="Black"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource SideBar}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="150"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        <Border x:ConnectionId='2' x:Name="InfoPopup" Background="{ThemeResource ImageBackground}" CornerRadius="15" Canvas.ZIndex="100" BorderBrush="Gray" BorderThickness="2"
                HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1" Margin="20" Visibility="Collapsed"
                Grid.ColumnSpan="2">
            <TextBlock x:ConnectionId='51' x:Name="InfoPopupText" FontSize="24" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center" FontWeight="Bold"/>
        </Border>
        <Button x:ConnectionId='3' x:Name="BackPage" Margin="10"                          VerticalAlignment="Top">
            <SymbolIcon Symbol="Back"/>
        </Button>
        <Button x:ConnectionId='4' x:Name="AddButton" Margin="10"                           VerticalAlignment="Top" HorizontalAlignment="Right">
            <SymbolIcon Symbol="Add"/>
            <Button.Resources>
                <control:TeachingTip x:ConnectionId='48' x:Name="AddTagToolTip" 
                                                                     
                                          Title="Add a new tag:"
                                          Subtitle=""
                                          PreferredPlacement="Right">
                    <StackPanel Orientation="Horizontal">
                        <TextBox x:ConnectionId='49' x:Name="AddTagTextBox" Height="20" MinWidth="150"/>
                        <Button x:ConnectionId='50' x:Name="AdNewbutton" Margin="10"                             VerticalAlignment="Top" HorizontalAlignment="Right">
                            <SymbolIcon Symbol="Add"/>
                        </Button>
                    </StackPanel>
                </control:TeachingTip>
            </Button.Resources>
        </Button>
        <control:ProgressBar x:ConnectionId='5' VerticalAlignment="Top" Margin="10,50,10,00" Height="3" Foreground="White"
                     x:Name="LoadingBar" Visibility="Collapsed"/>
        <control:ProgressBar x:ConnectionId='6' VerticalAlignment="Top" Margin="10,58,10,00" Height="3" Foreground="White"
                     x:Name="SecondLoadingBar" Visibility="Collapsed"/>
        <ScrollViewer VerticalScrollBarVisibility="Visible" Margin="0,70,0,0" Background="{ThemeResource SideBar}">
            <StackPanel Grid.Column="0" Orientation="Vertical" Translation="0,0,52">
                <ListView x:ConnectionId='47' x:Name="FollowedTags"                                    IsItemClickEnabled="True"                                       />
            </StackPanel>
        </ScrollViewer>

        <Grid x:ConnectionId='7' Background="{ThemeResource MainBackground}" Grid.Column="1" VerticalAlignment="Stretch" x:Name="MainPanel" >
            <Button x:ConnectionId='8' Canvas.ZIndex="15" x:Name="CloseButton"                           Visibility="Collapsed"
                    VerticalAlignment="Top" Margin="10,10,10,10">
                <SymbolIcon Symbol="Cancel"/>
            </Button>
            <StackPanel x:ConnectionId='9' Background="#000F2D" x:Name="TopBar" Visibility="Collapsed"
                        Margin="0,0,0,10" Grid.Column="1" Canvas.ZIndex="10" Height="55" VerticalAlignment="Top">
                <StackPanel x:ConnectionId='31' Orientation="Horizontal" HorizontalAlignment="Center" x:Name="CommandBar">
                    <Button x:ConnectionId='32' x:Name="PoolButton" Margin="10,10,5,10" Visibility="Visible" HorizontalAlignment="Center"
                                                              >
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout x:ConnectionId='46' x:Name="PoolsMenu" Placement="Bottom" ShowMode="TransientWithDismissOnPointerMoveAway" />
                        </FlyoutBase.AttachedFlyout>
                        <StackPanel Orientation="Horizontal">
                            <SymbolIcon Symbol="Library" Margin="0,0,5,0"/>
                            <TextBlock Text="Pools"/>
                        </StackPanel>
                    </Button>
                    <Button x:ConnectionId='33' x:Name="ImageSize" Margin="0,0,5,0"                          >
                        <SymbolIcon Symbol="Pictures"/>
                        <FlyoutBase.AttachedFlyout>
                            <MenuFlyout x:ConnectionId='42' x:Name="ImageSizeMenu" Placement="Bottom" ShowMode="TransientWithDismissOnPointerMoveAway">
                                <MenuFlyoutItem x:ConnectionId='43' Text="Page Height"                            />
                                <MenuFlyoutItem x:ConnectionId='44' Text="Sample Height"                            />
                                <MenuFlyoutItem x:ConnectionId='45' Text="Full Height"                            />
                            </MenuFlyout>
                        </FlyoutBase.AttachedFlyout>
                    </Button>
                    <Button x:ConnectionId='34' x:Name="BackPost" Margin="0,0,5,0"                         >
                        <SymbolIcon Symbol="Back"/>
                    </Button>
                    <TextBlock x:ConnectionId='35' x:Name="SearchName" Margin="5,5,5,8" VerticalAlignment="Center" FontSize="18" TextDecorations="Underline">
                    </TextBlock>
                    <Button x:ConnectionId='36' x:Name="ForwardPost"                             Margin="5,0,5,0">
                        <SymbolIcon Symbol="Forward"/>
                    </Button>
                    <StackPanel Orientation="Horizontal">
                        <Button x:ConnectionId='37' Canvas.ZIndex="20" Margin="0,10,5,10" x:Name="VoteUpButton"                             >
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Like"/>
                                <TextBlock x:ConnectionId='41' x:Name="VoteUpCount"/>
                            </StackPanel>
                        </Button>
                        <Button x:ConnectionId='38' Canvas.ZIndex="20" Margin="0,10,5,10" x:Name="VoteDownButton"                               >
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Dislike"/>
                                <TextBlock x:ConnectionId='40' x:Name="VoteDownCount"/>
                            </StackPanel>
                        </Button>
                        <Button x:ConnectionId='39' Canvas.ZIndex="20" Margin="0,10,0,10" x:Name="FavoiteButton"                              >
                            <StackPanel Orientation="Horizontal">
                                <SymbolIcon Symbol="Add" Margin="0,0,10,0"/>
                                <TextBlock Text="Favorite"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <Grid>
                <control:ProgressRing x:ConnectionId='10' x:Name="ImageLoadProgress" Width="80" Height="80" IsActive="True" IsIndeterminate="True"
                                          Foreground="White" Visibility="Collapsed" Canvas.ZIndex="20"/>
                <ScrollViewer x:ConnectionId='11' x:Name="ImageScrollViewer">
                    <StackPanel Margin="0,60,0,0">
                        <uwpcontrols:ImageEx x:ConnectionId='17' x:Name="bigpicture" Source=""
                                             Canvas.ZIndex="1" Visibility="Collapsed"
                                                                                                                          
                                             ManipulationMode="TranslateX,TranslateInertia,System"                                                 
                                                                                                     />
                        <uwpcontrols:ImageEx x:ConnectionId='18' x:Name="smallpicture"                                                                                                                                
                                                Canvas.ZIndex="1" Visibility="Collapsed"
                                                                                     ManipulationMode="TranslateX,TranslateInertia,System"                                                 
                                                                                                     />
                        <MediaElement x:ConnectionId='19' Visibility="Collapsed" Canvas.ZIndex="40" Width="auto"
                                      AutoPlay="False" x:Name="bigvideo"                                               
                                      AreTransportControlsEnabled="True"                                      IsLooping="True" ManipulationMode="TranslateX,TranslateInertia,System"                                                 
                                                                                              />
                        <Grid x:ConnectionId='20' x:Name="DescRect" Visibility="Collapsed" Background="{ThemeResource DescBackground}" CornerRadius="10" Margin="10,10,15,10">
                            <Rectangle Width="5" VerticalAlignment="Stretch" HorizontalAlignment="Left" Fill="{ThemeResource SideLine}"/>
                            <StackPanel Orientation="Vertical">
                                <HyperlinkButton x:ConnectionId='29' x:Name="DescHyperlink" FontSize="28" Margin="10" Padding="0,5,5,5" FontWeight="SemiBold" Foreground="White"                            >
                                    <TextBlock Text="Description: "/>
                                </HyperlinkButton>
                                <TextBlock x:ConnectionId='30' x:Name="DescText" Margin="10,0,10,10" HorizontalAlignment="Left" TextWrapping="Wrap" FontSize="18"/>
                            </StackPanel>
                        </Grid>
                        <ListView x:ConnectionId='21' x:Name="CommentsListView" IsItemClickEnabled="True"                                                                                           >
                            <ListView.ItemTemplate>
                                <DataTemplate                            >
                                    <Grid x:ConnectionId='23'>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Orientation="Vertical">
                                            <HyperlinkButton x:ConnectionId='28'                                 Padding="0,5,5,5" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                                            <!--<controls:ImageEx BorderBrush="{ThemeResource SystemControlBackgroundListMediumRevealBorderBrush}" Source="{x:Bind Avatar_Url}" Width="150" Height="150" Margin="0,0,0,10"/>-->
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <Grid x:ConnectionId='24' Margin="10,0,0,-25" Background="{ThemeResource DescBackground}" CornerRadius="10"                               >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="50*"/>
                                                </Grid.ColumnDefinitions>
                                                <Rectangle Grid.Column="0" Width="7" VerticalAlignment="Stretch" Fill="{ThemeResource SideLine}"/>
                                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                                    <HyperlinkButton x:ConnectionId='26'                               Padding="0,5,5,5" Foreground="White" Margin="10,0,0,0" FontSize="16"/>
                                                    <TextBlock x:ConnectionId='27'                       Margin="10,0,10,10" TextWrapping="WrapWholeWords"/>
                                                </StackPanel>
                                            </Grid>
                                            <TextBlock x:ConnectionId='25' Grid.Column="1"                      Margin="10,10,10,10" TextWrapping="WrapWholeWords" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="{ThemeResource CommentBackground}"/>
                                    <Setter Property="Margin" Value="10"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </StackPanel>
                </ScrollViewer>
                <GridView x:ConnectionId='12' x:Name="ImageGrid"                                              Grid.Column="1"
                  HorizontalAlignment="Stretch"
                                                  IsItemClickEnabled="True"
                  Background="{ThemeResource MainBackground}">
                    <GridView.ItemTemplate>
                        <DataTemplate                         >
                            <Grid x:ConnectionId='14' Margin="10,0,0,10" Width="150" Height="150" Visibility="{Binding ItemVis}">
                                <uwpcontrols:ImageEx x:ConnectionId='15' Source="{Binding preview.url}"                                                                            />
                                <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="{ThemeResource TextBackgound}">
                                    <TextBlock x:ConnectionId='16'                          Margin="0,-4,0,0"            />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>
                </GridView>
            </Grid>
        </Grid>
    </Grid>
</Page>

