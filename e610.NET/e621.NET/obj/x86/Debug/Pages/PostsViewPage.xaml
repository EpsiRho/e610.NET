<Page x:ConnectionId='1'
    x:Class="e610.NET.PostsViewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:e610.NET"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:control="using:Microsoft.UI.Xaml.Controls"
    xmlns:uwpcontrols="using:Microsoft.Toolkit.Uwp.UI.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="SideBar"
                          Color="#001439"/>
                    <SolidColorBrush x:Key="MainBackground"
                          Color="#000F2D"/>
                    <SolidColorBrush x:Key="TextBackgound" Color="#FF464646"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="180"/>
            <ColumnDefinition Width="100*"/>
        </Grid.ColumnDefinitions>
        
        <!--Sidebar StackPanel-->
        <StackPanel Grid.Column="0" Orientation="Vertical" Background="{ThemeResource SideBar}" Translation="0,0,52">
            <StackPanel.Shadow>
                <ThemeShadow x:ConnectionId='9' x:Name="SidePanelShadow"/>
            </StackPanel.Shadow>
            <!--Search Title, Bar, and Button-->
            <TextBlock Text="Search" FontSize="18" Margin="10,10,10,0" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Vertical" Margin="10,10,10,10">
                <TextBox x:ConnectionId='15' Width="auto" Height="Auto" x:Name="SearchBox"
                     VerticalAlignment="Top" HorizontalAlignment="Stretch"
                     TextWrapping="Wrap"                                                                />
                <ListView x:ConnectionId='16' x:Name="SearchTagAutoComplete" Visibility="Visible" IsItemClickEnabled="True"                                            />
                <Button x:ConnectionId='17' x:Name="SearchButton"                              HorizontalAlignment="Stretch" Margin="0,5,0,0">
                    <SymbolIcon Symbol="Accept"/>
                </Button>
            </StackPanel>

            <!--Progressbar, Hidden under Search Button-->
            <control:ProgressBar x:ConnectionId='10' x:Name="LoadingBar" IsIndeterminate="True" Visibility="Collapsed"  Margin="0,0,0,0"
                         Height="3" Foreground="White" Width="150"
                         ShowPaused="False" ShowError="False"/>

            <!--Post Count Control-->
            <TextBlock Text="Post Count" FontSize="18" Margin="10,0,10,0" HorizontalAlignment="Center"/>
            <Slider x:ConnectionId='11' x:Name="PostCountSlider" Margin="10,0,10,0" Maximum="300" Minimum="25" StepFrequency="5"/>

            <!--Page controls and number-->
            <TextBlock Text="Page" FontSize="18" Margin="10,0,10,5" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:ConnectionId='12' x:Name="BackPage" Margin="0,0,5,0"                         >
                    <SymbolIcon Symbol="Back"/>
                </Button>
                <TextBlock x:ConnectionId='13'                           FontSize="20" Margin="0,0,0,0"/>
                <Button x:ConnectionId='14' x:Name="ForwardPage"                             Margin="5,0,0,0">
                    <SymbolIcon Symbol="Forward"/>
                </Button>
            </StackPanel>
        </StackPanel>

        <!--Posts View-->
        <Grid x:ConnectionId='2' Background="{ThemeResource MainBackground}" Grid.Column="1" VerticalAlignment="Stretch" x:Name="MainPanel">
            <GridView x:ConnectionId='3' x:Name="ImageGrid"                                        
                  HorizontalAlignment="Stretch" 
                                                  IsItemClickEnabled="True">
                <GridView.ItemTemplate>
                    <DataTemplate                        >
                        <Grid x:ConnectionId='6' Margin="10,0,0,10" Width="150" Height="150">
                            <uwpcontrols:ImageEx x:ConnectionId='7' Source="{Binding preview.url}"                                                                            />
                            <StackPanel HorizontalAlignment="Right" VerticalAlignment="Bottom" Background="{ThemeResource TextBackgound}">
                                <TextBlock x:ConnectionId='8'                          Margin="0,-4,0,0"            />
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            <Grid x:ConnectionId='4' x:Name="ImageShadowHost"/>
        </Grid>
    </Grid>
</Page>

