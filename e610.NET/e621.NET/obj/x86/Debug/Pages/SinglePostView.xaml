<Page x:ConnectionId='1' x:Name="page"
    x:Class="e610.NET.SinglePostView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:e610.NET"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:muxc="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:control="using:Microsoft.UI.Xaml.Controls" 
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls" 
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"                       >
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <SolidColorBrush x:Key="SideBar"
                          Color="#001439"/>
                    <SolidColorBrush x:Key="MainBackground"
                          Color="#000F2D"/>
                    <SolidColorBrush x:Key="ButtonBackground"
                          Color="Black"/>
                    <SolidColorBrush x:Key="DescBackground"
                          Color="#0B2C5F"/>
                    <SolidColorBrush x:Key="CommentBackground"
                          Color="#052049"/>
                    <SolidColorBrush x:Key="SideLine"
                                     Color="#009CB4"/>
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
        </ResourceDictionary>
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MinWidth="180"/>
            <ColumnDefinition Width="90*"/>
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0">
            <StackPanel Orientation="Vertical" Background="{ThemeResource SideBar}" Translation="0,0,52">
                <StackPanel.Shadow>
                    <ThemeShadow x:ConnectionId='37' x:Name="SidePanelShadow"/>
                </StackPanel.Shadow>
                <TextBlock Text="Search" FontSize="18" Margin="10,10,10,0"  HorizontalAlignment="Center"/>
                <StackPanel Orientation="Vertical" Margin="10,10,10,10">
                    <TextBox x:ConnectionId='55' Width="auto" Height="Auto" x:Name="SearchBox"
                     VerticalAlignment="Top" HorizontalAlignment="Stretch"
                     TextWrapping="Wrap"                                                                />
                    <ListView x:ConnectionId='56' x:Name="SearchTagAutoComplete" Visibility="Visible" IsItemClickEnabled="True"                                            />
                    <Button x:ConnectionId='57' x:Name="SearchButton"                              HorizontalAlignment="Stretch" Margin="0,5,0,0">
                        <SymbolIcon Symbol="Accept"/>
                    </Button>
                </StackPanel>
                <control:ProgressBar x:ConnectionId='38' x:Name="LoadingBar" IsIndeterminate="False" Visibility="Collapsed"  Margin="0,0,0,0"
                         Height="6" Foreground="White" Width="150"/>
                <StackPanel Orientation="Vertical">
                    <HyperlinkButton x:ConnectionId='39' x:Name="ArtistsTitle" Foreground="White" Content="Artists:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='40' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="ArtistsTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='41' x:Name="CopyrightsTitle" Foreground="White" Content="Copyrights:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='42' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="CopyrightsTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='43' x:Name="CharactersTitle" Foreground="White" Content="Characters:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='44' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="CharactersTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='45' x:Name="SpeciesTitle" Foreground="White" Content="Species:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='46' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="SpeciesTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='47' x:Name="GeneralTitle" Foreground="White" Content="General:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='48' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="GeneralTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='49' x:Name="MetaTitle" Foreground="White" Content="Meta:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='50' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="MetaTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='51' x:Name="LoreTitle" Foreground="White" Content="Lore:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='52' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="LoreTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                    <HyperlinkButton x:ConnectionId='53' x:Name="InvalidTitle" Foreground="White" Content="Invalid:" FontSize="24" Margin="10,0,0,0" Visibility="Collapsed"                    />
                    <ListView x:ConnectionId='54' Grid.Column="0" CanDragItems="False" AllowDrop="False" x:Name="InvalidTags" VerticalAlignment="Stretch"                                                           IsItemClickEnabled="True"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <Grid Grid.Column="1" Background="{ThemeResource MainBackground}">
            <ScrollViewer x:ConnectionId='3' x:Name="ImageScrollView" VerticalScrollBarVisibility ="Auto">
                <StackPanel Orientation="Vertical">
                    <StackPanel Background="{ThemeResource SideBar}" Translation="0,0,52" Margin="0,0,0,10">
                        <StackPanel.Resources>
                            <ThemeShadow x:ConnectionId='20' x:Name="TopPanelShadow"/>
                        </StackPanel.Resources>
                        <StackPanel x:ConnectionId='21' Orientation="Horizontal" HorizontalAlignment="Center" x:Name="CommandBar">
                            <Button x:ConnectionId='22' x:Name="PoolBar" Margin="10,10,5,10" Visibility="Visible" HorizontalAlignment="Center" Background="Black"
                                                           >
                                <FlyoutBase.AttachedFlyout>
                                    <MenuFlyout x:ConnectionId='36' x:Name="PoolsMenu" Placement="Bottom" ShowMode="TransientWithDismissOnPointerMoveAway" />
                                </FlyoutBase.AttachedFlyout>
                                <StackPanel Orientation="Horizontal">
                                    <SymbolIcon Symbol="Library" Margin="0,0,5,0"/>
                                    <TextBlock Text="Pools"/>
                                </StackPanel>
                            </Button>
                            <Button x:ConnectionId='23' x:Name="ImageSize" Margin="0,0,5,0"                           Background="Black">
                                <SymbolIcon Symbol="Pictures"/>
                                <FlyoutBase.AttachedFlyout>
                                    <MenuFlyout x:ConnectionId='32' x:Name="ImageSizeMenu" Placement="Bottom" ShowMode="TransientWithDismissOnPointerMoveAway">
                                        <MenuFlyoutItem x:ConnectionId='33' Text="Page Height"                            />
                                        <MenuFlyoutItem x:ConnectionId='34' Text="Sample Height"                            />
                                        <MenuFlyoutItem x:ConnectionId='35' Text="Full Height"                            />
                                    </MenuFlyout>
                                </FlyoutBase.AttachedFlyout>
                            </Button>
                            <Button x:ConnectionId='24' x:Name="BackPage" Margin="0,0,5,0"                          Background="Black">
                                <SymbolIcon Symbol="Back"/>
                            </Button>
                            <ComboBox x:ConnectionId='25' x:Name="MovementSelection"                                       
                                      Width="250" VerticalAlignment="Center" DisplayMemberPath="name">
                            </ComboBox>
                            <Button x:ConnectionId='26' x:Name="ForwardPage"                             Margin="5,0,5,0" Background="Black">
                                <SymbolIcon Symbol="Forward"/>
                            </Button>
                            <StackPanel Orientation="Horizontal">
                                <Button x:ConnectionId='27' Background="Black" Canvas.ZIndex="20" Margin="0,10,5,10" x:Name="VoteUpButton"                             >
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Like"/>
                                        <TextBlock x:ConnectionId='31' x:Name="VoteUpCount"/>
                                    </StackPanel>
                                </Button>
                                <Button x:ConnectionId='28' Background="Black" Canvas.ZIndex="20" Margin="0,10,5,10" x:Name="VoteDownButton"                               >
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Dislike"/>
                                        <TextBlock x:ConnectionId='30' x:Name="VoteDownCount"/>
                                    </StackPanel>
                                </Button>
                                <Button x:ConnectionId='29' Background="Black" Canvas.ZIndex="20" Margin="0,10,0,10" x:Name="FavoiteButton"                              >
                                    <StackPanel Orientation="Horizontal">
                                        <SymbolIcon Symbol="Add" Margin="0,0,10,0"/>
                                        <TextBlock Text="Favorite"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel x:ConnectionId='5' x:Name="PostPanel">
                        <control:ProgressBar x:ConnectionId='6' Grid.Column="1" x:Name="DownloadProgress"  Visibility="Collapsed"
                             IsIndeterminate="True" Width="192" Height="7" Foreground="White"
                             HorizontalAlignment="Center" VerticalAlignment="Top" Canvas.ZIndex="30" Margin="10" Background="Black"/>

                        <controls:ImageEx x:ConnectionId='7' x:Name="bigpicture"                                         
                   Canvas.ZIndex="1" Visibility="Collapsed"
                                                                                                   >
                        </controls:ImageEx>
                        <controls:ImageEx x:ConnectionId='8' x:Name="smallpicture"                                                                                                                                
                   Canvas.ZIndex="1" Visibility="Collapsed"
                                                       />
                        <MediaElement x:ConnectionId='9' Visibility="Collapsed" Canvas.ZIndex="40"
                    AutoPlay="False" x:Name="bigvideo"                                               
                    AreTransportControlsEnabled="True"                                      IsLooping="True">
                            
                        </MediaElement>
                        <StackPanel Orientation="Horizontal" Background="{ThemeResource DescBackground}" CornerRadius="10" Margin="10,10,15,10">
                            <Rectangle Width="7" VerticalAlignment="Stretch" Fill="{ThemeResource SideLine}"/>
                            <StackPanel Orientation="Vertical">
                                <HyperlinkButton x:ConnectionId='18' x:Name="DescHyperlink" FontSize="28" Margin="10" FontWeight="SemiBold" Foreground="White"                            >
                                    <TextBlock Text="Description: "/>
                                </HyperlinkButton>
                                <TextBlock x:ConnectionId='19' x:Name="DescText"                                        Margin="10"                                          TextWrapping="WrapWholeWords" FontSize="18"/>
                            </StackPanel>
                        </StackPanel>
                        <ListView x:ConnectionId='10' x:Name="CommentsListView" IsItemClickEnabled="True"                                                                                           >
                            <ListView.ItemTemplate>
                                <DataTemplate                           >
                                    <Grid x:ConnectionId='12'>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Column="0" Orientation="Vertical">
                                            <HyperlinkButton x:ConnectionId='17'                                 FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                                            <!--<controls:ImageEx BorderBrush="{ThemeResource SystemControlBackgroundListMediumRevealBorderBrush}" Source="{x:Bind Avatar_Url}" Width="150" Height="150" Margin="0,0,0,10"/>-->
                                        </StackPanel>
                                        <StackPanel Grid.Column="1">
                                            <Grid x:ConnectionId='13' Margin="10,0,0,-25" Background="{ThemeResource DescBackground}" CornerRadius="10"                               >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="50*"/>
                                                </Grid.ColumnDefinitions>
                                                <Rectangle Grid.Column="0" Width="7" VerticalAlignment="Stretch" Fill="{ThemeResource SideLine}"/>
                                                <StackPanel Grid.Column="1" Orientation="Vertical">
                                                    <HyperlinkButton x:ConnectionId='15'                               Foreground="White" Margin="10,0,0,0" FontSize="16"/>
                                                    <TextBlock x:ConnectionId='16'                       Margin="0,0,10,10" TextWrapping="WrapWholeWords"/>
                                                </StackPanel>
                                            </Grid>
                                            <TextBlock x:ConnectionId='14' Grid.Column="1"                      Margin="10,10,10,10" TextWrapping="WrapWholeWords" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="Background" Value="{ThemeResource CommentBackground}"/>
                                    <Setter Property="Margin" Value="10"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            <control:ProgressRing x:ConnectionId='4' x:Name="ImageLoadProgress" Width="80" Height="80" IsActive="True" Foreground="White"/>
        </Grid>

        <control:InfoBar x:ConnectionId='2' IsOpen="false" Grid.Column="1" HorizontalAlignment="Center"
                      Severity="Informational" VerticalAlignment="Bottom"
                      Title="" x:Name="InfoPopup"
                      Message="" Margin="10"/>
    </Grid>
</Page>

